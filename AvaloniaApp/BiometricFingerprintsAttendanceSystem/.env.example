# Database Configuration
BIOCLOCK_CONNECTION_STRING=SERVER=localhost; DATABASE=mda_biometrics; userid=root; PASSWORD=root; PORT=3306;

# Fingerprint Device Configuration
BIOCLOCK_FINGERPRINT_DEVICE=Auto
BIOCLOCK_ENABLE_FINGERPRINT_SDKS=false

# API Configuration
BIOCLOCK_API_BASE_URL=https://api.mydreamsacademy.com.ng/biometrics
BIOCLOCK_API_KEY=
BIOCLOCK_API_KEY_HEADER=x-api-key
BIOCLOCK_STUDENT_LOOKUP_PATH=students/{regNo}
BIOCLOCK_ENROLLMENT_STATUS_PATH=enrollments/{regNo}
BIOCLOCK_ENROLLMENT_SUBMIT_PATH=enrollments
BIOCLOCK_IDENTIFY_PATH=identify

# Demo Mode Configuration
# Set BIOCLOCK_DEMO_MODE=true to enable demo mode for testing
# Demo mode allows login with demo credentials and provides a test student
# Real fingerprint hardware is still used for capture/verification
BIOCLOCK_DEMO_MODE=true
BIOCLOCK_DEMO_ADMIN_EMAIL=demo@example.com
BIOCLOCK_DEMO_ADMIN_PASSWORD=demo1234
BIOCLOCK_DEMO_STUDENT_REGNO=DEMO001
BIOCLOCK_DEMO_STUDENT_NAME=Demo Student
BIOCLOCK_DEMO_STUDENT_CLASS=Demo Class
