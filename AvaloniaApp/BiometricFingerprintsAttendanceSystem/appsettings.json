{
  "$schema": "./appsettings.schema.json",
  "ConnectionStrings": {
    "Default": "SERVER=localhost; DATABASE=mda_biometrics; userid=root; PASSWORD=root; PORT=3306;"
  },
  "Fingerprint": {
    "Device": "Auto",
    "EnableSdks": false,
    "CaptureTimeoutSeconds": 30,
    "MinQualityThreshold": 60,
    "MaxEnrollmentAttempts": 5,
    "VerificationThreshold": 0.7,
    "AllowedDevices": [
      "DigitalPersona4500",
      "WindowsBiometric",
      "Fprintd",
      "Goodix",
      "Synaptics",
      "Elan",
      "ValiditySensors"
    ]
  },
  "Api": {
    "BaseUrl": "https://api.mydreamsacademy.com.ng/biometrics",
    "ApiKey": "",
    "ApiKeyHeader": "x-api-key",
    "StudentLookupPath": "students/{regNo}",
    "EnrollmentStatusPath": "enrollments/{regNo}",
    "EnrollmentSubmitPath": "enrollments",
    "IdentifyPath": "identify"
  },
  "Demo": {
    "Enabled": true,
    "AdminEmail": "demo@example.com",
    "AdminPassword": "demo1234",
    "StudentRegNo": "DEMO001",
    "StudentName": "Demo Student",
    "StudentClass": "Demo Class"
  }
}
