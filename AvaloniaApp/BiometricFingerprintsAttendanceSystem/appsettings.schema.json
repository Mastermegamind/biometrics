{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BiometricFingerprintsAttendanceSystem appsettings",
  "type": "object",
  "properties": {
    "ConnectionStrings": {
      "type": "object",
      "properties": {
        "Default": { "type": "string" }
      },
      "required": ["Default"],
      "additionalProperties": true
    },
    "Fingerprint": {
      "type": "object",
      "properties": {
        "Device": {
          "type": "string",
          "enum": [
            "None",
            "Auto",
            "DigitalPersona4500",
            "MantraMfs100",
            "WindowsBiometric",
            "Fprintd",
            "ValiditySensors",
            "Goodix",
            "Synaptics",
            "Elan",
            "FocalTech",
            "LighTuning",
            "Upek"
          ],
          "description": "Fingerprint device type. Use 'Auto' for platform-specific auto-detection."
        },
        "EnableSdks": {
          "type": "boolean",
          "description": "Enable vendor-specific SDKs (DigitalPersona, Mantra) when available."
        },
        "CaptureTimeoutSeconds": {
          "type": "integer",
          "minimum": 5,
          "maximum": 120,
          "default": 30,
          "description": "Timeout in seconds for fingerprint capture operations."
        },
        "MinQualityThreshold": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "default": 60,
          "description": "Minimum acceptable fingerprint quality score (0-100)."
        },
        "MaxEnrollmentAttempts": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10,
          "default": 5,
          "description": "Maximum number of capture attempts during enrollment."
        },
        "VerificationThreshold": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": 0.7,
          "description": "Match confidence threshold for verification (0.0-1.0)."
        },
        "AllowedDevices": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of allowed device types for this installation."
        }
      },
      "required": ["Device", "EnableSdks"],
      "additionalProperties": true
    },
    "Api": {
      "type": "object",
      "properties": {
        "BaseUrl": { "type": "string" },
        "ApiKey": { "type": "string" },
        "ApiKeyHeader": { "type": "string" },
        "StudentLookupPath": { "type": "string" },
        "EnrollmentStatusPath": { "type": "string" },
        "EnrollmentSubmitPath": { "type": "string" },
        "IdentifyPath": { "type": "string" }
      },
      "required": [
        "BaseUrl",
        "ApiKey",
        "ApiKeyHeader",
        "StudentLookupPath",
        "EnrollmentStatusPath",
        "EnrollmentSubmitPath",
        "IdentifyPath"
      ],
      "additionalProperties": true
    },
    "Demo": {
      "type": "object",
      "description": "Demo mode configuration for testing without database/API.",
      "properties": {
        "Enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable demo mode for testing. Uses real fingerprint hardware with mock data."
        },
        "AdminEmail": {
          "type": "string",
          "default": "demo@example.com",
          "description": "Demo admin email/username for login."
        },
        "AdminPassword": {
          "type": "string",
          "default": "demo1234",
          "description": "Demo admin password for login."
        },
        "StudentRegNo": {
          "type": "string",
          "default": "DEMO001",
          "description": "Demo student registration number for enrollment testing."
        },
        "StudentName": {
          "type": "string",
          "default": "Demo Student",
          "description": "Demo student full name."
        },
        "StudentClass": {
          "type": "string",
          "default": "Demo Class",
          "description": "Demo student class/section."
        }
      },
      "additionalProperties": true
    }
  },
  "required": ["ConnectionStrings", "Fingerprint", "Api"],
  "additionalProperties": true
}
