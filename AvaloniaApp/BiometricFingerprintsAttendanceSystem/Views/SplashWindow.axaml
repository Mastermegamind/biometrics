<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="BiometricFingerprintsAttendanceSystem.Views.SplashWindow"
        Width="520" Height="300"
        WindowStartupLocation="CenterScreen"
        CanResize="False"
        SystemDecorations="None"
        Background="#161616">

  <Border CornerRadius="20" Background="#1F1F1F" Padding="28" BoxShadow="0 10 40 0 #00000080">
    <StackPanel Spacing="18" HorizontalAlignment="Center" VerticalAlignment="Center">
      <Border Background="#8B0000" CornerRadius="18" Width="84" Height="84"
              HorizontalAlignment="Center">
        <TextBlock Text="&#x1F9EC;" FontSize="36"
                   HorizontalAlignment="Center" VerticalAlignment="Center" />
      </Border>
      <TextBlock Text="BioClock" FontSize="28" FontWeight="Bold"
                 Foreground="#F8FAFC" HorizontalAlignment="Center" />
      <TextBlock Text="Biometric Attendance System"
                 Foreground="#C7CBD1" FontSize="13"
                 HorizontalAlignment="Center" />
      <TextBlock Text="Starting up..."
                 Foreground="#C7CBD1" FontSize="12"
                 HorizontalAlignment="Center" />
    </StackPanel>
  </Border>
</Window>
