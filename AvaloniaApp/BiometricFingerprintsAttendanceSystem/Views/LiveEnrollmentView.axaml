<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BiometricFingerprintsAttendanceSystem.ViewModels"
             x:Class="BiometricFingerprintsAttendanceSystem.Views.LiveEnrollmentView"
             x:DataType="vm:LiveEnrollmentViewModel">

    <UserControl.Styles>
        <!-- Modern Card Style -->
        <Style Selector="Border.card">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BoxShadow" Value="0 2 8 0 #10000000"/>
            <Setter Property="Padding" Value="24"/>
        </Style>

        <!-- Input Field Style -->
        <Style Selector="TextBox.modern">
            <Setter Property="Height" Value="40"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
        </Style>

        <!-- Primary Button Style -->
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.primary:pointerover">
            <Setter Property="Background" Value="#1D4ED8"/>
        </Style>
        <Style Selector="Button.primary:disabled">
            <Setter Property="Background" Value="#94A3B8"/>
            <Setter Property="Cursor" Value="Arrow"/>
        </Style>

        <!-- Secondary Button Style -->
        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.secondary:pointerover">
            <Setter Property="Background" Value="#F8FAFC"/>
        </Style>

        <!-- Success Button Style -->
        <Style Selector="Button.success">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.success:pointerover">
            <Setter Property="Background" Value="#059669"/>
        </Style>

        <!-- Label Style -->
        <Style Selector="TextBlock.label">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- Value Style -->
        <Style Selector="TextBlock.value">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Section Title Style -->
        <Style Selector="TextBlock.section-title">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#0F172A"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Finger Button Base Style -->
        <Style Selector="Button.finger-btn">
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="Background" Value="#F1F5F9"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style Selector="Button.finger-btn:pointerover">
            <Setter Property="BorderBrush" Value="#2563EB"/>
            <Setter Property="Background" Value="#EFF6FF"/>
        </Style>

        <!-- Finger Button Selected State -->
        <Style Selector="Button.finger-btn.selected">
            <Setter Property="BorderBrush" Value="#2563EB"/>
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Finger Button Enrolled State -->
        <Style Selector="Button.finger-btn.enrolled">
            <Setter Property="BorderBrush" Value="#10B981"/>
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Finger Button Enrolled + Selected State -->
        <Style Selector="Button.finger-btn.enrolled.selected">
            <Setter Property="BorderBrush" Value="#059669"/>
            <Setter Property="Background" Value="#059669"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="Auto,*,Auto" Background="#F8FAFC">

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#E2E8F0" 
                BorderThickness="0,0,0,1"
                Padding="32,24">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Student Enrollment"
                               FontSize="28" 
                               FontWeight="Bold"
                               Foreground="#0F172A"/>
                    <TextBlock Text="{Binding SyncModeDisplay}"
                               FontSize="13" 
                               Foreground="#64748B"
                               Margin="0,4,0,0"/>
                </StackPanel>
                
                <!-- Online Status Badge -->
                <Border Grid.Column="1"
                        Background="#F0FDF4"
                        CornerRadius="20"
                        Padding="12,6"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Ellipse Width="8" Height="8"
                                 Fill="{Binding IsOnline, Converter={StaticResource BoolToOnlineColorConverter}}"
                                 VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding IsOnline, Converter={StaticResource BoolToOnlineTextConverter}}"
                                   Foreground="#166534"
                                   FontSize="12"
                                   FontWeight="Medium"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" 
              ColumnDefinitions="340,*,340" 
              Margin="32,24">

            <!-- Left Panel: Student Information -->
            <Border Grid.Column="0"
                    Classes="card"
                    Margin="0,0,12,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Student Information"
                                   Classes="section-title"/>

                        <!-- Registration Number Input -->
                        <TextBlock Text="REGISTRATION NUMBER" 
                                   Classes="label"/>
                        <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,20">
                            <TextBox Grid.Column="0"
                                     Classes="modern"
                                     Text="{Binding RegNo, Mode=TwoWay}"
                                     Watermark="Enter registration number"
                                     IsEnabled="{Binding !IsLoading}"/>
                            <Button Grid.Column="1"
                                    Content="Lookup"
                                    Classes="primary"
                                    Command="{Binding LookupStudentCommand}"
                                    Margin="8,0,0,0"
                                    Height="40"
                                    Padding="20,0"
                                    IsEnabled="{Binding !IsLoading}"/>
                        </Grid>

                        <!-- Student Photo -->
                        <Border Width="180" 
                                Height="200"
                                Background="#F1F5F9"
                                CornerRadius="12"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,24"
                                ClipToBounds="True">
                            <Grid>
                                <Image Source="{Binding StudentPhoto}"
                                       Stretch="UniformToFill"/>
                                <Border Background="#F1F5F9"
                                        IsVisible="{Binding StudentPhoto, Converter={x:Static ObjectConverters.IsNull}}">
                                    <TextBlock Text="ðŸ“·"
                                               FontSize="48"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Opacity="0.3"/>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Student Details -->
                        <StackPanel Spacing="0">
                            <TextBlock Text="REG NO" Classes="label"/>
                            <TextBlock Text="{Binding StudentRegNo}"
                                       Classes="value"
                                       TextWrapping="Wrap"/>

                            <TextBlock Text="NAME" Classes="label"/>
                            <TextBlock Text="{Binding StudentName}"
                                       Classes="value"
                                       TextWrapping="Wrap"/>

                            <TextBlock Text="CLASS" Classes="label"/>
                            <TextBlock Text="{Binding StudentClass}"
                                       Classes="value"/>

                            <TextBlock Text="PASSPORT URL" Classes="label"/>
                            <TextBlock Text="{Binding PassportUrl}"
                                       Classes="value"
                                       FontSize="11"
                                       TextWrapping="Wrap"
                                       Foreground="#64748B"/>

                            <TextBlock Text="RENEWAL DATE" Classes="label"/>
                            <TextBlock Text="{Binding RenewalDate}"
                                       Classes="value"/>

                            <TextBlock Text="ENROLLMENT STATUS" Classes="label"/>
                            <Border Background="#EFF6FF"
                                    CornerRadius="6"
                                    Padding="10,6"
                                    HorizontalAlignment="Left"
                                    Margin="0,0,0,16">
                                <TextBlock Text="{Binding EnrollmentStatus}"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="#1E40AF"/>
                            </Border>

                            <TextBlock Text="FINGERS ENROLLED" Classes="label"/>
                            <TextBlock Text="{Binding EnrollmentFingerCount}"
                                       Classes="value"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#2563EB"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Center Panel: Fingerprint Capture -->
            <Border Grid.Column="1"
                    Classes="card"
                    Margin="12,0">
                <Grid RowDefinitions="Auto,*,Auto">

                    <!-- Finger Selection - Visual Hand Diagram -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,24">
                        <TextBlock Text="Select Finger to Enroll"
                                   Classes="section-title"
                                   HorizontalAlignment="Center"/>

                        <!-- Hand Diagram Container -->
                        <Border Background="#F8FAFC"
                                CornerRadius="12"
                                Padding="24,16"
                                HorizontalAlignment="Center">
                            <Grid ColumnDefinitions="Auto,40,Auto">

                                <!-- LEFT HAND -->
                                <StackPanel Grid.Column="0" Spacing="8">
                                    <TextBlock Text="LEFT HAND"
                                               FontWeight="Bold"
                                               FontSize="12"
                                               Foreground="#64748B"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,8"/>

                                    <!-- Left Hand Visual -->
                                    <Canvas Width="140" Height="200">
                                        <!-- Hand Palm Shape -->
                                        <Border Canvas.Left="20" Canvas.Top="80"
                                                Width="100" Height="120"
                                                Background="#E2E8F0"
                                                CornerRadius="20,20,30,30"
                                                Opacity="0.5"/>

                                        <!-- Left Little (Pinky) - Index 10 -->
                                        <Button Canvas.Left="8" Canvas.Top="55"
                                                Classes="finger-btn"
                                                Classes.selected="{Binding FingerSlots[4].IsSelected}"
                                                Classes.enrolled="{Binding FingerSlots[4].IsEnrolled}"
                                                Command="{Binding SelectFingerCommand}"
                                                CommandParameter="LeftLittle"
                                                ToolTip.Tip="Left Little Finger">
                                            <TextBlock Text="5" FontSize="11" FontWeight="Bold"/>
                                        </Button>
                                        <Border Canvas.Left="14" Canvas.Top="91"
                                                Width="24" Height="50"
                                                Background="#E2E8F0"
                                                CornerRadius="12,12,0,0"
                                                Opacity="0.5"/>

                                        <!-- Left Ring - Index 9 -->
                                        <Button Canvas.Left="32" Canvas.Top="25"
                                                Classes="finger-btn"
                                                Classes.selected="{Binding FingerSlots[3].IsSelected}"
                                                Classes.enrolled="{Binding FingerSlots[3].IsEnrolled}"
                                                Command="{Binding SelectFingerCommand}"
                                                CommandParameter="LeftRing"
                                                ToolTip.Tip="Left Ring Finger">
                                            <TextBlock Text="4" FontSize="11" FontWeight="Bold"/>
                                        </Button>
                                        <Border Canvas.Left="38" Canvas.Top="61"
                                                Width="24" Height="60"
                                                Background="#E2E8F0"
                                                CornerRadius="12,12,0,0"
                                                Opacity="0.5"/>

                                        <!-- Left Middle - Index 8 -->
                                        <Button Canvas.Left="58" Canvas.Top="8"
                                                Classes="finger-btn"
                                                Classes.selected="{Binding FingerSlots[2].IsSelected}"
                                                Classes.enrolled="{Binding FingerSlots[2].IsEnrolled}"
                                                Command="{Binding SelectFingerCommand}"
                                                CommandParameter="LeftMiddle"
                                                ToolTip.Tip="Left Middle Finger">
                                            <TextBlock Text="3" FontSize="11" FontWeight="Bold"/>
                                        </Button>
                                        <Border Canvas.Left="64" Canvas.Top="44"
                                                Width="24" Height="70"
                                                Background="#E2E8F0"
                                                CornerRadius="12,12,0,0"
                                                Opacity="0.5"/>

                                        <!-- Left Index - Index 7 -->
                                        <Button Canvas.Left="84" Canvas.Top="25"
                                                Classes="finger-btn"
                                                Classes.selected="{Binding FingerSlots[1].IsSelected}"
                                                Classes.enrolled="{Binding FingerSlots[1].IsEnrolled}"
                                                Command="{Binding SelectFingerCommand}"
                                                CommandParameter="LeftIndex"
                                                ToolTip.Tip="Left Index Finger">
                                            <TextBlock Text="2" FontSize="11" FontWeight="Bold"/>
                                        </Button>
                                        <Border Canvas.Left="90" Canvas.Top="61"
                                                Width="24" Height="55"
                                                Background="#E2E8F0"
                                                CornerRadius="12,12,0,0"
                                                Opacity="0.5"/>

                                        <!-- Left Thumb - Index 6 -->
                                        <Button Canvas.Left="108" Canvas.Top="100"
                                                Classes="finger-btn"
                                                Classes.selected="{Binding FingerSlots[0].IsSelected}"
                                                Classes.enrolled="{Binding FingerSlots[0].IsEnrolled}"
                                                Command="{Binding SelectFingerCommand}"
                                                CommandParameter="LeftThumb"
                                                ToolTip.Tip="Left Thumb">
                                            <TextBlock Text="1" FontSize="11" FontWeight="Bold"/>
                                        </Button>
                                        <Border Canvas.Left="114" Canvas.Top="136"
                                                Width="24" Height="40"
                                                Background="#E2E8F0"
                                                CornerRadius="12"
                                                Opacity="0.5"
                                                RenderTransformOrigin="0.5,0.5">
                                            <Border.RenderTransform>
                                                <RotateTransform Angle="-30"/>
                                            </Border.RenderTransform>
                                        </Border>
                                    </Canvas>
                                </StackPanel>

                                <!-- Divider -->
                                <Border Grid.Column="1"
                                        Width="2"
                                        Background="#E2E8F0"
                                        VerticalAlignment="Stretch"
                                        Margin="0,30"/>

                                <!-- RIGHT HAND -->
                                <StackPanel Grid.Column="2" Spacing="8">
                                    <TextBlock Text="RIGHT HAND"
                                               FontWeight="Bold"
                                               FontSize="12"
                                               Foreground="#64748B"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,8"/>

                                    <!-- Right Hand Visual (Mirrored) -->
                                    <Canvas Width="140" Height="200">
                                        <!-- Hand Palm Shape -->
                                        <Border Canvas.Left="20" Canvas.Top="80"
                                                Width="100" Height="120"
                                                Background="#E2E8F0"
                                                CornerRadius="20,20,30,30"
                                                Opacity="0.5"/>

                                        <!-- Right Thumb - Index 1 -->
                                        <Button Canvas.Left="8" Canvas.Top="100"
                                                Classes="finger-btn"
                                                Classes.selected="{Binding FingerSlots[5].IsSelected}"
                                                Classes.enrolled="{Binding FingerSlots[5].IsEnrolled}"
                                                Command="{Binding SelectFingerCommand}"
                                                CommandParameter="RightThumb"
                                                ToolTip.Tip="Right Thumb">
                                            <TextBlock Text="1" FontSize="11" FontWeight="Bold"/>
                                        </Button>
                                        <Border Canvas.Left="2" Canvas.Top="136"
                                                Width="24" Height="40"
                                                Background="#E2E8F0"
                                                CornerRadius="12"
                                                Opacity="0.5"
                                                RenderTransformOrigin="0.5,0.5">
                                            <Border.RenderTransform>
                                                <RotateTransform Angle="30"/>
                                            </Border.RenderTransform>
                                        </Border>

                                        <!-- Right Index - Index 2 -->
                                        <Button Canvas.Left="32" Canvas.Top="25"
                                                Classes="finger-btn"
                                                Classes.selected="{Binding FingerSlots[6].IsSelected}"
                                                Classes.enrolled="{Binding FingerSlots[6].IsEnrolled}"
                                                Command="{Binding SelectFingerCommand}"
                                                CommandParameter="RightIndex"
                                                ToolTip.Tip="Right Index Finger">
                                            <TextBlock Text="2" FontSize="11" FontWeight="Bold"/>
                                        </Button>
                                        <Border Canvas.Left="38" Canvas.Top="61"
                                                Width="24" Height="55"
                                                Background="#E2E8F0"
                                                CornerRadius="12,12,0,0"
                                                Opacity="0.5"/>

                                        <!-- Right Middle - Index 3 -->
                                        <Button Canvas.Left="58" Canvas.Top="8"
                                                Classes="finger-btn"
                                                Classes.selected="{Binding FingerSlots[7].IsSelected}"
                                                Classes.enrolled="{Binding FingerSlots[7].IsEnrolled}"
                                                Command="{Binding SelectFingerCommand}"
                                                CommandParameter="RightMiddle"
                                                ToolTip.Tip="Right Middle Finger">
                                            <TextBlock Text="3" FontSize="11" FontWeight="Bold"/>
                                        </Button>
                                        <Border Canvas.Left="64" Canvas.Top="44"
                                                Width="24" Height="70"
                                                Background="#E2E8F0"
                                                CornerRadius="12,12,0,0"
                                                Opacity="0.5"/>

                                        <!-- Right Ring - Index 4 -->
                                        <Button Canvas.Left="84" Canvas.Top="25"
                                                Classes="finger-btn"
                                                Classes.selected="{Binding FingerSlots[8].IsSelected}"
                                                Classes.enrolled="{Binding FingerSlots[8].IsEnrolled}"
                                                Command="{Binding SelectFingerCommand}"
                                                CommandParameter="RightRing"
                                                ToolTip.Tip="Right Ring Finger">
                                            <TextBlock Text="4" FontSize="11" FontWeight="Bold"/>
                                        </Button>
                                        <Border Canvas.Left="90" Canvas.Top="61"
                                                Width="24" Height="60"
                                                Background="#E2E8F0"
                                                CornerRadius="12,12,0,0"
                                                Opacity="0.5"/>

                                        <!-- Right Little (Pinky) - Index 5 -->
                                        <Button Canvas.Left="108" Canvas.Top="55"
                                                Classes="finger-btn"
                                                Classes.selected="{Binding FingerSlots[9].IsSelected}"
                                                Classes.enrolled="{Binding FingerSlots[9].IsEnrolled}"
                                                Command="{Binding SelectFingerCommand}"
                                                CommandParameter="RightLittle"
                                                ToolTip.Tip="Right Little Finger">
                                            <TextBlock Text="5" FontSize="11" FontWeight="Bold"/>
                                        </Button>
                                        <Border Canvas.Left="114" Canvas.Top="91"
                                                Width="24" Height="50"
                                                Background="#E2E8F0"
                                                CornerRadius="12,12,0,0"
                                                Opacity="0.5"/>
                                    </Canvas>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Legend -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,16,0,0"
                                    Spacing="24">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Ellipse Width="16" Height="16" Fill="#F1F5F9" Stroke="#CBD5E1" StrokeThickness="2"/>
                                <TextBlock Text="Not Enrolled" FontSize="12" Foreground="#64748B" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Ellipse Width="16" Height="16" Fill="#2563EB"/>
                                <TextBlock Text="Selected" FontSize="12" Foreground="#64748B" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Ellipse Width="16" Height="16" Fill="#10B981"/>
                                <TextBlock Text="Enrolled" FontSize="12" Foreground="#64748B" VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Selected Finger Display -->
                        <Border Background="#EFF6FF"
                                CornerRadius="8"
                                Padding="16,10"
                                HorizontalAlignment="Center"
                                Margin="0,12,0,0">
                            <TextBlock FontSize="14" Foreground="#1E40AF" FontWeight="SemiBold">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="Selected: {0}">
                                        <Binding Path="SelectedFinger"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </Border>
                    </StackPanel>

                    <!-- Fingerprint Preview -->
                    <Grid Grid.Row="1" VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Capture Progress Indicator (shown during multi-capture) -->
                        <Border Grid.Row="0"
                                Background="#FEF3C7"
                                BorderBrush="#F59E0B"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16,12"
                                Margin="0,0,0,16"
                                HorizontalAlignment="Center"
                                IsVisible="{Binding IsCapturing}">
                            <StackPanel Spacing="8">
                                <TextBlock Text="{Binding CaptureProgressDisplay}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="#B45309"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding CaptureProgressMessage}"
                                           FontSize="13"
                                           Foreground="#92400E"
                                           HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           MaxWidth="280"/>
                                <!-- Progress dots -->
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                            Spacing="8"
                                            Margin="0,4,0,0">
                                    <Ellipse Width="12" Height="12"
                                             Fill="{Binding CurrentCaptureStep, Converter={StaticResource StepToColorConverter}, ConverterParameter=1}"/>
                                    <Ellipse Width="12" Height="12"
                                             Fill="{Binding CurrentCaptureStep, Converter={StaticResource StepToColorConverter}, ConverterParameter=2}"/>
                                    <Ellipse Width="12" Height="12"
                                             Fill="{Binding CurrentCaptureStep, Converter={StaticResource StepToColorConverter}, ConverterParameter=3}"/>
                                    <Ellipse Width="12" Height="12"
                                             Fill="{Binding CurrentCaptureStep, Converter={StaticResource StepToColorConverter}, ConverterParameter=4}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Fingerprint Image -->
                        <Border Grid.Row="1"
                                Background="#FAFAFA"
                                BorderBrush="#E2E8F0"
                                BorderThickness="2"
                                CornerRadius="12"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Width="240"
                                Height="280"
                                ClipToBounds="True">
                            <Grid>
                                <Image Source="{Binding CurrentFingerprintImage}"
                                       Stretch="Uniform"
                                       Margin="16"/>
                                <StackPanel HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            IsVisible="{Binding CurrentFingerprintImage, Converter={x:Static ObjectConverters.IsNull}}">
                                    <TextBlock Text="ðŸ‘†"
                                               FontSize="64"
                                               HorizontalAlignment="Center"
                                               Opacity="0.2"/>
                                    <TextBlock Text="Place finger on scanner"
                                               HorizontalAlignment="Center"
                                               Foreground="#94A3B8"
                                               FontSize="14"
                                               Margin="0,12,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Capture Buttons -->
                    <StackPanel Grid.Row="2"
                                HorizontalAlignment="Center"
                                Spacing="12"
                                Margin="0,24,0,0">

                        <!-- Native SDK Enrollment Button (Windows only) -->
                        <Button Content="Open SDK Enrollment Window"
                                Classes="primary"
                                Command="{Binding LaunchNativeEnrollmentCommand}"
                                HorizontalAlignment="Center"
                                Padding="40,16"
                                FontSize="16"
                                IsVisible="{Binding IsNativeEnrollmentAvailable}"
                                IsEnabled="{Binding IsStudentLoaded}"
                                ToolTip.Tip="Opens the native DigitalPersona 10-finger enrollment window"/>

                        <!-- Manual Capture Button (4-scan enrollment) -->
                        <Button Content="Enroll Finger (4 scans)"
                                Classes="secondary"
                                Command="{Binding CaptureFingerCommand}"
                                HorizontalAlignment="Center"
                                Padding="32,12"
                                FontSize="14"
                                IsEnabled="{Binding IsStudentLoaded}"
                                ToolTip.Tip="Enrolls the selected finger with 4 scans for better accuracy (same as SDK)"/>

                        <!-- Help text -->
                        <TextBlock Text="Both options require 4 scans per finger for accurate enrollment"
                                   FontSize="11"
                                   Foreground="#94A3B8"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Right Panel: Enrollment Progress -->
            <Border Grid.Column="2"
                    Classes="card"
                    Margin="12,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Enrollment Progress"
                                   Classes="section-title"/>

                        <!-- Progress Summary -->
                        <Border Background="#F0F9FF"
                                BorderBrush="#BFDBFE"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,20">
                            <TextBlock Text="{Binding EnrollmentProgress}"
                                       FontSize="14"
                                       Foreground="#1E40AF"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                        </Border>

                        <!-- Finger Status List -->
                        <TextBlock Text="FINGER STATUS"
                                   Classes="label"
                                   Margin="0,0,0,12"/>
                        <ItemsControl ItemsSource="{Binding FingerSlots}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F8FAFC"
                                            CornerRadius="8"
                                            Padding="12"
                                            Margin="0,0,0,8">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding DisplayName}"
                                                       FontSize="13"
                                                       VerticalAlignment="Center"
                                                       Foreground="#475569"/>
                                            <Border Grid.Column="1"
                                                    Background="{Binding IsEnrolled, Converter={StaticResource BoolToColorConverter}}"
                                                    CornerRadius="6"
                                                    Padding="10,4">
                                                <TextBlock Text="{Binding Status}"
                                                           FontSize="11"
                                                           FontWeight="Medium"
                                                           Foreground="White"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Action Buttons -->
                        <StackPanel Margin="0,24,0,0" Spacing="12">
                            <Button Content="âœ“ Submit Enrollment"
                                    Classes="success"
                                    Command="{Binding SubmitEnrollmentCommand}"
                                    HorizontalAlignment="Stretch"
                                    FontSize="15"
                                    IsEnabled="{Binding CanSubmit}"/>

                            <Button Content="Clear / New Student"
                                    Classes="secondary"
                                    Command="{Binding ClearCommand}"
                                    HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Footer: Status Bar -->
        <Border Grid.Row="2"
                Background="#1E293B"
                Padding="32,16">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal"
                            Spacing="12">
                    <TextBlock Text="â—"
                               Foreground="#10B981"
                               FontSize="16"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding StatusMessage}"
                               Foreground="#E2E8F0"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
