<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BiometricFingerprintsAttendanceSystem.ViewModels"
             x:Class="BiometricFingerprintsAttendanceSystem.Views.LiveEnrollmentView"
             x:DataType="vm:LiveEnrollmentViewModel">

    <Grid RowDefinitions="Auto,*,Auto" Margin="20">

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Student Enrollment"
                       FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding SyncModeDisplay}"
                       FontSize="12" Foreground="Gray"
                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1" ColumnDefinitions="300,*,300">

            <!-- Left Panel: Student Info -->
            <Border Grid.Column="0"
                    Background="#F5F5F5"
                    CornerRadius="10"
                    Padding="15"
                    Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Student Information"
                               FontWeight="Bold" FontSize="16"
                               Margin="0,0,0,15"/>

                    <!-- Registration Number Input -->
                    <TextBlock Text="Registration Number" FontWeight="SemiBold"/>
                    <Grid ColumnDefinitions="*,Auto" Margin="0,5,0,15">
                        <TextBox Grid.Column="0"
                                 Text="{Binding RegNo, Mode=TwoWay}"
                                 Watermark="Enter Reg No..."
                                 IsEnabled="{Binding !IsLoading}"/>
                        <Button Grid.Column="1"
                                Content="Lookup"
                                Command="{Binding LookupStudentCommand}"
                                Margin="5,0,0,0"
                                IsEnabled="{Binding !IsLoading}"/>
                    </Grid>

                    <!-- Student Photo -->
                    <Border Width="150" Height="150"
                            Background="#E0E0E0"
                            CornerRadius="5"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,15">
                        <Image Source="{Binding StudentPhoto}"
                               Stretch="UniformToFill"/>
                    </Border>

                    <!-- Student Details -->
                    <TextBlock Text="Reg No" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding StudentRegNo}"
                               FontSize="14"
                               Margin="0,0,0,10"
                               TextWrapping="Wrap"/>

                    <TextBlock Text="Name" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding StudentName}"
                               FontSize="14"
                               Margin="0,0,0,10"
                               TextWrapping="Wrap"/>

                    <TextBlock Text="Class" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding StudentClass}"
                               FontSize="14"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Passport URL" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding PassportUrl}"
                               FontSize="12"
                               Margin="0,0,0,10"
                               TextWrapping="Wrap"/>

                    <TextBlock Text="Renewal Date" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding RenewalDate}"
                               FontSize="14"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Enrollment Status" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding EnrollmentStatus}"
                               FontSize="14"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Finger Count" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding EnrollmentFingerCount}"
                               FontSize="14"/>
                </StackPanel>
            </Border>

            <!-- Center Panel: Fingerprint Capture -->
            <Border Grid.Column="1"
                    Background="#FAFAFA"
                    CornerRadius="10"
                    Padding="20"
                    Margin="10,0">
                <Grid RowDefinitions="Auto,*,Auto">

                    <!-- Finger Selection -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="Select Finger to Enroll"
                                   FontWeight="Bold" FontSize="16"
                                   Margin="0,0,0,10"/>

                        <Grid ColumnDefinitions="*,*">
                            <!-- Left Hand -->
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Left Hand"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,5"/>
                                <ItemsControl ItemsSource="{Binding FingerSlots}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <RadioButton Content="{Binding DisplayName}"
                                                         GroupName="FingerSelection"
                                                         IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                         IsVisible="{Binding Name, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                                         Margin="0,2">
                                                <RadioButton.IsVisible>
                                                    <MultiBinding Converter="{x:Static BoolConverters.And}">
                                                        <Binding Path="Name" Converter="{x:Static StringConverters.IsNotNullOrEmpty}"/>
                                                    </MultiBinding>
                                                </RadioButton.IsVisible>
                                            </RadioButton>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <!-- Right Hand -->
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Right Hand"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,5"/>
                            </StackPanel>
                        </Grid>

                        <!-- Simple Finger Buttons -->
                        <WrapPanel HorizontalAlignment="Center" Margin="0,10,0,0">
                            <RadioButton Content="Left Thumb" GroupName="Fingers"
                                         IsChecked="{Binding SelectedFinger, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                         Margin="5"/>
                            <RadioButton Content="Right Thumb" GroupName="Fingers" Margin="5"/>
                            <RadioButton Content="Left Index" GroupName="Fingers" Margin="5"/>
                            <RadioButton Content="Right Index" GroupName="Fingers" Margin="5"/>
                        </WrapPanel>
                    </StackPanel>

                    <!-- Fingerprint Preview -->
                    <Border Grid.Row="1"
                            Background="#E8E8E8"
                            CornerRadius="10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Width="200" Height="250">
                        <Grid>
                            <Image Source="{Binding CurrentFingerprintImage}"
                                   Stretch="Uniform"
                                   Margin="10"/>
                            <TextBlock Text="Place finger on scanner"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="Gray"
                                       IsVisible="{Binding CurrentFingerprintImage, Converter={x:Static ObjectConverters.IsNull}}"/>
                        </Grid>
                    </Border>

                    <!-- Capture Button -->
                    <Button Grid.Row="2"
                            Content="Capture Fingerprint"
                            Command="{Binding CaptureFingerCommand}"
                            HorizontalAlignment="Center"
                            Padding="30,15"
                            FontSize="16"
                            Margin="0,20,0,0"
                            IsEnabled="{Binding IsStudentLoaded}"/>
                </Grid>
            </Border>

            <!-- Right Panel: Enrollment Status -->
            <Border Grid.Column="2"
                    Background="#F5F5F5"
                    CornerRadius="10"
                    Padding="15"
                    Margin="10,0,0,0">
                <StackPanel>
                    <TextBlock Text="Enrollment Status"
                               FontWeight="Bold" FontSize="16"
                               Margin="0,0,0,15"/>

                    <TextBlock Text="{Binding EnrollmentProgress}"
                               FontSize="14"
                               Margin="0,0,0,15"/>

                    <!-- Finger Status List -->
                    <ItemsControl ItemsSource="{Binding FingerSlots}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="*,Auto" Margin="0,3">
                                    <TextBlock Grid.Column="0"
                                               Text="{Binding DisplayName}"/>
                                    <Border Grid.Column="1"
                                            Background="{Binding IsEnrolled, Converter={StaticResource BoolToColorConverter}}"
                                            CornerRadius="3"
                                            Padding="8,2">
                                        <TextBlock Text="{Binding Status}"
                                                   FontSize="11"
                                                   Foreground="White"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Submit Button -->
                    <Button Content="Submit Enrollment"
                            Command="{Binding SubmitEnrollmentCommand}"
                            HorizontalAlignment="Stretch"
                            Padding="15,12"
                            Margin="0,20,0,0"
                            FontWeight="Bold"
                            IsEnabled="{Binding CanSubmit}"/>

                    <!-- Clear Button -->
                    <Button Content="Clear / New Student"
                            Command="{Binding ClearCommand}"
                            HorizontalAlignment="Stretch"
                            Padding="15,10"
                            Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Footer: Status Bar -->
        <Border Grid.Row="2"
                Background="#333"
                CornerRadius="5"
                Padding="15,10"
                Margin="0,20,0,0">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           Foreground="White"
                           VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Ellipse Width="10" Height="10"
                             Fill="{Binding IsOnline, Converter={StaticResource BoolToOnlineColorConverter}}"
                             Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding IsOnline, Converter={StaticResource BoolToOnlineTextConverter}}"
                               Foreground="White"
                               FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
