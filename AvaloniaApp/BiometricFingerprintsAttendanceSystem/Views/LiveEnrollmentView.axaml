<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BiometricFingerprintsAttendanceSystem.ViewModels"
             x:Class="BiometricFingerprintsAttendanceSystem.Views.LiveEnrollmentView"
             x:DataType="vm:LiveEnrollmentViewModel">

    <UserControl.Styles>
        <!-- Modern Card Style -->
        <Style Selector="Border.card">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BoxShadow" Value="0 2 8 0 #10000000"/>
            <Setter Property="Padding" Value="24"/>
        </Style>

        <!-- Input Field Style -->
        <Style Selector="TextBox.modern">
            <Setter Property="Height" Value="40"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
        </Style>

        <!-- Primary Button Style -->
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.primary:pointerover">
            <Setter Property="Background" Value="#1D4ED8"/>
        </Style>
        <Style Selector="Button.primary:disabled">
            <Setter Property="Background" Value="#94A3B8"/>
            <Setter Property="Cursor" Value="Arrow"/>
        </Style>

        <!-- Secondary Button Style -->
        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.secondary:pointerover">
            <Setter Property="Background" Value="#F8FAFC"/>
        </Style>

        <!-- Success Button Style -->
        <Style Selector="Button.success">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.success:pointerover">
            <Setter Property="Background" Value="#059669"/>
        </Style>

        <!-- Label Style -->
        <Style Selector="TextBlock.label">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- Value Style -->
        <Style Selector="TextBlock.value">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Section Title Style -->
        <Style Selector="TextBlock.section-title">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#0F172A"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Radio Button Modern Style -->
        <Style Selector="RadioButton.finger-select">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style Selector="RadioButton.finger-select:checked">
            <Setter Property="Background" Value="#EFF6FF"/>
            <Setter Property="BorderBrush" Value="#2563EB"/>
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="Auto,*,Auto" Background="#F8FAFC">

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#E2E8F0" 
                BorderThickness="0,0,0,1"
                Padding="32,24">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Student Enrollment"
                               FontSize="28" 
                               FontWeight="Bold"
                               Foreground="#0F172A"/>
                    <TextBlock Text="{Binding SyncModeDisplay}"
                               FontSize="13" 
                               Foreground="#64748B"
                               Margin="0,4,0,0"/>
                </StackPanel>
                
                <!-- Online Status Badge -->
                <Border Grid.Column="1"
                        Background="#F0FDF4"
                        CornerRadius="20"
                        Padding="12,6"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Ellipse Width="8" Height="8"
                                 Fill="{Binding IsOnline, Converter={StaticResource BoolToOnlineColorConverter}}"
                                 VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding IsOnline, Converter={StaticResource BoolToOnlineTextConverter}}"
                                   Foreground="#166534"
                                   FontSize="12"
                                   FontWeight="Medium"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" 
              ColumnDefinitions="340,*,340" 
              Margin="32,24">

            <!-- Left Panel: Student Information -->
            <Border Grid.Column="0"
                    Classes="card"
                    Margin="0,0,12,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Student Information"
                                   Classes="section-title"/>

                        <!-- Registration Number Input -->
                        <TextBlock Text="REGISTRATION NUMBER" 
                                   Classes="label"/>
                        <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,20">
                            <TextBox Grid.Column="0"
                                     Classes="modern"
                                     Text="{Binding RegNo, Mode=TwoWay}"
                                     Watermark="Enter registration number"
                                     IsEnabled="{Binding !IsLoading}"/>
                            <Button Grid.Column="1"
                                    Content="Lookup"
                                    Classes="primary"
                                    Command="{Binding LookupStudentCommand}"
                                    Margin="8,0,0,0"
                                    Height="40"
                                    Padding="20,0"
                                    IsEnabled="{Binding !IsLoading}"/>
                        </Grid>

                        <!-- Student Photo -->
                        <Border Width="180" 
                                Height="200"
                                Background="#F1F5F9"
                                CornerRadius="12"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,24"
                                ClipToBounds="True">
                            <Grid>
                                <Image Source="{Binding StudentPhoto}"
                                       Stretch="UniformToFill"/>
                                <Border Background="#F1F5F9"
                                        IsVisible="{Binding StudentPhoto, Converter={x:Static ObjectConverters.IsNull}}">
                                    <TextBlock Text="ðŸ“·"
                                               FontSize="48"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Opacity="0.3"/>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Student Details -->
                        <StackPanel Spacing="0">
                            <TextBlock Text="REG NO" Classes="label"/>
                            <TextBlock Text="{Binding StudentRegNo}"
                                       Classes="value"
                                       TextWrapping="Wrap"/>

                            <TextBlock Text="NAME" Classes="label"/>
                            <TextBlock Text="{Binding StudentName}"
                                       Classes="value"
                                       TextWrapping="Wrap"/>

                            <TextBlock Text="CLASS" Classes="label"/>
                            <TextBlock Text="{Binding StudentClass}"
                                       Classes="value"/>

                            <TextBlock Text="PASSPORT URL" Classes="label"/>
                            <TextBlock Text="{Binding PassportUrl}"
                                       Classes="value"
                                       FontSize="11"
                                       TextWrapping="Wrap"
                                       Foreground="#64748B"/>

                            <TextBlock Text="RENEWAL DATE" Classes="label"/>
                            <TextBlock Text="{Binding RenewalDate}"
                                       Classes="value"/>

                            <TextBlock Text="ENROLLMENT STATUS" Classes="label"/>
                            <Border Background="#EFF6FF"
                                    CornerRadius="6"
                                    Padding="10,6"
                                    HorizontalAlignment="Left"
                                    Margin="0,0,0,16">
                                <TextBlock Text="{Binding EnrollmentStatus}"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="#1E40AF"/>
                            </Border>

                            <TextBlock Text="FINGERS ENROLLED" Classes="label"/>
                            <TextBlock Text="{Binding EnrollmentFingerCount}"
                                       Classes="value"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#2563EB"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Center Panel: Fingerprint Capture -->
            <Border Grid.Column="1"
                    Classes="card"
                    Margin="12,0">
                <Grid RowDefinitions="Auto,*,Auto">

                    <!-- Finger Selection -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,24">
                        <TextBlock Text="Select Finger to Enroll"
                                   Classes="section-title"/>

                        <Grid ColumnDefinitions="*,*">
                            <!-- Left Hand -->
                            <Border Grid.Column="0"
                                    Background="#F8FAFC"
                                    CornerRadius="8"
                                    Padding="16">
                                <StackPanel>
                                    <TextBlock Text="Left Hand"
                                               FontWeight="SemiBold"
                                               FontSize="14"
                                               Foreground="#475569"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,12"/>
                                    <ItemsControl ItemsSource="{Binding FingerSlots}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Spacing="4"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <RadioButton Content="{Binding DisplayName}"
                                                             Classes="finger-select"
                                                             GroupName="FingerSelection"
                                                             IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                             IsVisible="{Binding Name, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                                    <RadioButton.IsVisible>
                                                        <MultiBinding Converter="{x:Static BoolConverters.And}">
                                                            <Binding Path="Name" Converter="{x:Static StringConverters.IsNotNullOrEmpty}"/>
                                                        </MultiBinding>
                                                    </RadioButton.IsVisible>
                                                </RadioButton>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>

                            <!-- Right Hand -->
                            <Border Grid.Column="1"
                                    Background="#F8FAFC"
                                    CornerRadius="8"
                                    Padding="16">
                                <StackPanel>
                                    <TextBlock Text="Right Hand"
                                               FontWeight="SemiBold"
                                               FontSize="14"
                                               Foreground="#475569"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,12"/>
                                    <!-- Right hand fingers would go here if needed -->
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Quick Select Buttons -->
                        <WrapPanel HorizontalAlignment="Center" 
                                   Margin="0,16,0,0">
                            <RadioButton Content="Left Thumb" 
                                         GroupName="Fingers"
                                         Classes="finger-select"
                                         Margin="4"/>
                            <RadioButton Content="Right Thumb" 
                                         GroupName="Fingers"
                                         Classes="finger-select"
                                         Margin="4"/>
                            <RadioButton Content="Left Index" 
                                         GroupName="Fingers"
                                         Classes="finger-select"
                                         Margin="4"/>
                            <RadioButton Content="Right Index" 
                                         GroupName="Fingers"
                                         Classes="finger-select"
                                         Margin="4"/>
                        </WrapPanel>
                    </StackPanel>

                    <!-- Fingerprint Preview -->
                    <Border Grid.Row="1"
                            Background="#FAFAFA"
                            BorderBrush="#E2E8F0"
                            BorderThickness="2"
                            CornerRadius="12"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Width="240" 
                            Height="280"
                            ClipToBounds="True">
                        <Grid>
                            <Image Source="{Binding CurrentFingerprintImage}"
                                   Stretch="Uniform"
                                   Margin="16"/>
                            <StackPanel HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        IsVisible="{Binding CurrentFingerprintImage, Converter={x:Static ObjectConverters.IsNull}}">
                                <TextBlock Text="ðŸ‘†"
                                           FontSize="64"
                                           HorizontalAlignment="Center"
                                           Opacity="0.2"/>
                                <TextBlock Text="Place finger on scanner"
                                           HorizontalAlignment="Center"
                                           Foreground="#94A3B8"
                                           FontSize="14"
                                           Margin="0,12,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Capture Button -->
                    <Button Grid.Row="2"
                            Content="Capture Fingerprint"
                            Classes="primary"
                            Command="{Binding CaptureFingerCommand}"
                            HorizontalAlignment="Center"
                            Padding="40,16"
                            FontSize="16"
                            Margin="0,24,0,0"
                            IsEnabled="{Binding IsStudentLoaded}"/>
                </Grid>
            </Border>

            <!-- Right Panel: Enrollment Progress -->
            <Border Grid.Column="2"
                    Classes="card"
                    Margin="12,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Enrollment Progress"
                                   Classes="section-title"/>

                        <!-- Progress Summary -->
                        <Border Background="#F0F9FF"
                                BorderBrush="#BFDBFE"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,20">
                            <TextBlock Text="{Binding EnrollmentProgress}"
                                       FontSize="14"
                                       Foreground="#1E40AF"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                        </Border>

                        <!-- Finger Status List -->
                        <TextBlock Text="FINGER STATUS"
                                   Classes="label"
                                   Margin="0,0,0,12"/>
                        <ItemsControl ItemsSource="{Binding FingerSlots}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F8FAFC"
                                            CornerRadius="8"
                                            Padding="12"
                                            Margin="0,0,0,8">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding DisplayName}"
                                                       FontSize="13"
                                                       VerticalAlignment="Center"
                                                       Foreground="#475569"/>
                                            <Border Grid.Column="1"
                                                    Background="{Binding IsEnrolled, Converter={StaticResource BoolToColorConverter}}"
                                                    CornerRadius="6"
                                                    Padding="10,4">
                                                <TextBlock Text="{Binding Status}"
                                                           FontSize="11"
                                                           FontWeight="Medium"
                                                           Foreground="White"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Action Buttons -->
                        <StackPanel Margin="0,24,0,0" Spacing="12">
                            <Button Content="âœ“ Submit Enrollment"
                                    Classes="success"
                                    Command="{Binding SubmitEnrollmentCommand}"
                                    HorizontalAlignment="Stretch"
                                    FontSize="15"
                                    IsEnabled="{Binding CanSubmit}"/>

                            <Button Content="Clear / New Student"
                                    Classes="secondary"
                                    Command="{Binding ClearCommand}"
                                    HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Footer: Status Bar -->
        <Border Grid.Row="2"
                Background="#1E293B"
                Padding="32,16">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal"
                            Spacing="12">
                    <TextBlock Text="â—"
                               Foreground="#10B981"
                               FontSize="16"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding StatusMessage}"
                               Foreground="#E2E8F0"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
