<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BiometricFingerprintsAttendanceSystem.Views.AdminPasswordResetView">

  <StackPanel Spacing="24">

    <StackPanel Spacing="6">
      <TextBlock Text="Admin Password Reset" Classes="PageTitle" />
      <TextBlock Text="Reset an administrator's password (local)"
                 Classes="PageSubtitle" />
    </StackPanel>

    <Border Classes="GlassCard">
      <StackPanel Spacing="20">
        <TextBlock Text="Reset Details" Classes="SectionHeader" />

        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto">

          <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4" Margin="0,0,8,16">
            <TextBlock Text="USERNAME" Classes="FieldLabel" />
            <TextBox Classes="GlassInput" Watermark="Admin username"
                     Text="{Binding Username, Mode=TwoWay}" />
          </StackPanel>

          <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4" Margin="8,0,0,16">
            <TextBlock Text="NEW PASSWORD" Classes="FieldLabel" />
            <TextBox Classes="GlassInput" Watermark="Enter new password"
                     Text="{Binding NewPassword, Mode=TwoWay}" PasswordChar="&#x25CF;" />
          </StackPanel>

          <StackPanel Grid.Row="1" Grid.Column="0" Spacing="4" Margin="0,0,8,0">
            <TextBlock Text="CONFIRM PASSWORD" Classes="FieldLabel" />
            <TextBox Classes="GlassInput" Watermark="Confirm password"
                     Text="{Binding ConfirmPassword, Mode=TwoWay}" PasswordChar="&#x25CF;" />
          </StackPanel>

        </Grid>

        <Separator Background="{DynamicResource SeparatorBrush}" Height="1" Margin="0,4" />

        <StackPanel Orientation="Horizontal" Spacing="12">
          <Button Classes="BtnPrimary" Content="Reset Password"
                  Command="{Binding ResetCommand}" />
          <TextBlock Text="{Binding StatusMessage}" Classes="ErrorText"
                     VerticalAlignment="Center"
                     IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
        </StackPanel>

      </StackPanel>
    </Border>

  </StackPanel>
</UserControl>
